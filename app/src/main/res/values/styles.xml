<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Catalog-->
    <style name="CarouselTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_carousel_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/margin_padding_minimal</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="CarouselLoadText">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_carousel_loading</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_margin">@dimen/card_corner_radius</item>
        <item name="android:text">@string/loading</item>
        <item name="android:visibility">gone</item>
    </style>
    <!--Catalog // -->

    <!--Details-->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="SubTextTitle" parent="Text">
        <item name="android:textSize">@dimen/subTitleTextSize</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
    <style name="TextTitle" parent="Text">
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Details // -->

</resources>
